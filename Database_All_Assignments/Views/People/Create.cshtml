@model CreatePersonViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-action="Create" method="post">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" />
    <span class="text-danger" asp-validation-for="FirstName"></span>
    <br />
    <label asp-for="LastName"></label>
    <input asp-for="LastName" />
    <span class="text-danger" asp-validation-for="LastName"></span>
    <br />
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" />
    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    <br />
    <label asp-for="Address"></label>
    <input asp-for="Address" />
    <span class="text-danger" asp-validation-for="Address"></span>
    <br />
    <div class="form-group">
        <label asp-for="ListLanguageID" class="control-label">Languages</label>
        <select asp-for="ListLanguageID" class="form-control">
            @foreach (var item in Model.LanguageList)
            {
                <option value="@item.LanguageID">@item.LanguageName</option>
            }
        </select>
        <span asp-validation-for="ListLanguageID" class="text-danger"></span>
    </div>
    <input class="text-danger" type="submit" value="Create" />
</form>