@model CreateLanguageViewModel

@{
    ViewData["Title"] = "Language Detail";
}

<h3>Language Detail</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LanguageID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LanguageID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LanguageName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LanguageName)
        </dd>
    </dl>
    <div>
        <h4>Details</h4>
        <ul>
            @foreach (var item in Model.PeopleList)
            {
                <li>@item.FirstName @item.LastName</li>
            }
        </ul>
    </div>
</div>
<div>
    <a asp-action="ShowLanguage">Back to List</a>
</div>
