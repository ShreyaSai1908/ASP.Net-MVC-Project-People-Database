@model CreateLanguageViewModel

@{
    ViewData["Title"] = "ShowLanguage";
}

<h1>ShowLanguage</h1>

<p>
    <a asp-action="CreateLanguage">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LanguageID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LanguageName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.LanguageList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageName)
            </td>
            
            
            <td>
                @Html.ActionLink("Edit", "EditLanguage", new { id=item.LanguageID }) |
                @Html.ActionLink("Details", "LanguageDetail", new { id=item.LanguageID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.LanguageID })
            </td>
        </tr>
    }
    </tbody>
</table>
